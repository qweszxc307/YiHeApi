<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.crown.projects.mine.mapper.LabelMapper">
<select id="queryLabelIdByOpenId" resultType="Integer">
   SELECT label_id FROM label_customer WHERE open_id = #{openId} and brand_id = #{brandId};
</select>
   <delete id="deleteLabelByBrandIdAndOpenId">
            DELETE FROM label_customer WHERE open_id = #{openId} AND brand_id = #{brandId}
   </delete>
<insert id="saveLabel">
   insert into label_customer(id,label_id,customer_id,open_id,brand_id,create_time,update_time) values (null ,#{id},#{customerId},#{openId},#{brandId},NOW(),NOW());
</insert>

</mapper>
